          <option value='2023'>2023</option>
          <option value='2024'>2024</option>
          <option value='2025'>2025</option>
        </select>
      </div>
    </div>

    <div class='buttons_container'>
      <input type='submit' value='Save'>
      <button class='negate' type='button'>Remove</button>
    </div>
  </form>
</div>
