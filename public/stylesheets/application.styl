@import('whitespace_reset.css')
@import('mixins')
@import('dragula.css')

// General Styles

html, body, textarea, input
  font: normal 14px "Helvetica Neue", Arial, Helvetica, sans-serif

html, body
  background: colors.bg
  color: colors.text
  height: 100%
  width: 100%

body
  position: relative
a
  color: colors.text
  text-decoration: none

#surface
  height: 100%
  width: 100%

#content
  position: relative
  height: 100%

#board_wrapper
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0

#board_main
  height: 100%

// Header Styles

#header
  position: relative
  height: 30px
  padding: 5px
  background: colors.accent
  box-shadow: 0 1px 1px rgba(0,0,0,.1)
  z-index: 10
a.logo
  position: absolute
  top: 5px
  left: 50%
  width: 80px
  height: 30px
  margin-left: -40px
  background-image: url('images/header_logo.png')
  background-size: 80px 30px
  opacity: .5
  -webkit-transition: opacity ease-in 85ms
  transition: opacity ease-in 85ms
  &:hover
    opacity: .8

#boards
  display: inline-block
  a
    header_button()
    width: 90px
    span:first-child
      icon('trello_icon')
      + span
        display: inline-block
        padding-right: 8px
        vertical-align: top

#search
  position: relative
  display: inline-block
  vertical-align: top
  input[type='text']
    display: inline-block
    border: none
    border-radius: 3px
    height: 30px
    outline: none
    background-color: rgba(255,255,255,.3)
    width: 180px
    box-sizing: border-box
    padding: 0 30px 0 8px
    font-size: 13px
  span.search_icon
    icon('search_icon')
    position: absolute
    right: 0
    cursor: pointer
  span.cancel
    position: absolute
    right: 0
    display: none
  &:hover
    box-shadow: inset 0 0 100px 100px rgba(255, 255, 255, 0.1)

#search.selected
  box-shadow: none
  input[type='text']
    background-color: white
    width: 280px
  span.search_icon
    display: none
  span.cancel
    cancel_button()
    background-size: 15px 15px

#user
  position: absolute
  top: 5px
  right: 0
  a.add
    header_button()
    span
      icon('white_add_icon')
  a.member
    header_button()
    span.avatar
      display: inline-block
      width: 30px
      height: 30px
      img
        width: 30px
        height: 30px
        border-radius: 3px 0 0 3px
    span.name
      display: inline-block
      vertical-align: top
      padding: 0 8px
  a.info
    header_button()
    span
      icon('info_icon')
  a.notifications
    header_button()
    span
      icon('notifications_icon')

// Main Styles

#board_header
  padding: 8px 4px 8px 10px
  height: auto
  position: relative
  a
    display: inline-block
    border-radius: 3px
    height: 30px
    line-height: 30px
    &.board_name
      font-size: 18px
      font-weight: 700
      padding: 0 8px
      &:hover
        background: colors.accent
    &.show_menu
      float: right
      display: inline-block
      box-sizing: border-box
      font-size: 9pt
      cursor: pointer
      &:hover
        background: colors.accent
      span:first-child
        height: 30px
        width: 30px
        padding: 6px
        line-height: 18px
        + span
          text-decoration: underline
          padding-right: 8px

#board_header
  .pop_over
    display: none
    background: white
    border-radius: 3px
    box-shadow: 0 1px 6px rgba(0,0,0,.15)
    position: absolute
    z-index: 70
    top: 46px
    border: 1px solid #D6DADC
    width: 300px
    padding: 0 10px 10px 10px
    div:first-of-type
      position: relative
      margin-bottom: 8px
    h3
      color: #8c8c8c
      line-height: 36px
      border-bottom: 1px solid #D6DADC
      text-align: center
      font-weight: normal
    a.cancel
      cancel_button()
      position: absolute
      top: 3px
      right: -5px
      background-size: 10px 10px
    label
      display: block
      color: colors.window.header
      font-weight: 700
      margin-bottom: 4px
    input[type='text']
      width: 100%
      margin: 4px 0 9pt
      border: 1px solid colors.window.border
      border-radius: 3px
      background: colors.list.bg
      padding: 7px
      box-sizing: border-box
    input[type='submit']
      save_button()
      margin-top: 8px
      padding: 7px 30px

#board_canvas
  position: relative
  height: 100%

#board, .gu-mirror
  white-space: nowrap
  position: absolute
  top: 0
  right: 0
  bottom: 0
  left: 0
  .outer_list_wrapper
    display: inline-block
    position: relative
  .list_wrapper
    display: inline-block
    position: relative
    .list
      display: inline-block
      margin: 0 10px
      border-radius: 3px
      width: 270px
      background: colors.list.bg
      color: colors.list.text
      vertical-align: top
      div.header
        position: relative
        padding: 8px 34px 8px 10px
        height: 18px
        textarea.editable_name
          margin: -3px -5px
          border-radius: 3px
          border: none
          padding: 3px 5px
          resize: none
          outline: none
          background: inherit
          color: colors.window.header
          width: 100%
          height: 18px
          width: 216px
          font-weight: 700
          display: inline-block
          cursor: pointer
          &.selected
            background: rgba(255, 255, 255, .85)
            cursor: auto
        .list_subscription
          position: absolute
          display: inline-block
          top: 4px
          right: 30px
          height: 26px
          width: 26px
          &.subscribed
            span
              icon('subscribe_icon')
              height: 18px
              width: 18px
              padding: 4px
              background-size: 14px 14px

        span.list_menu
          position: absolute
          top: 4px
          right: 4px
          display: inline-block
          height: 26px
          width: 26px
          text-align: center
          line-height: 18px
          vertical-align: middle
          border-radius: 3px
          cursor: pointer
          &:hover
            box-shadow: inset 0 0 100px 100px rgba(0, 0, 0, 0.1)

      ul.sortable_cards
          padding: 0 8px
          &.accept_card
            height: 70px
            border-radius: 3px
            background: colors.window.header
            margin-left: 10px
            margin-right: 10px
          li
            background: colors.list.card
            min-height: 20px
            border-radius: 3px
            margin-bottom: 6px
            border-bottom: 1px solid colors.list.card_border
            padding: 6px 6px 2px 8px
            cursor: pointer
            &:hover
              background: colors.list.hover_bg
            span.card_name
              line-height: 18px
              margin-bottom: 4px
              height: 18px
              display: block
              clear: both
        a.open_composer
          display: block
          line-height: 32px
          color: colors.list.link
          padding-left: 10px
          height: 32px
          &:hover
            color: colors.list.text
            text-decoration: underline
            background: linear-gradient(rgba(0, 0, 0, 0.1), rgba(0, 0, 0, 0.1) )
        .composer
          display: none
          textarea
            border: none
            border-radius: 3px
            font-size: 14px
            border-bottom: 1px solid colors.list.card_border
            color: colors.list.text
            background: colors.list.card
            min-height: 54px
            max-height: 162px
            width: 240px
            margin: 0 8px 4px 8px
            padding: 7px
            outline: none
            resize: none
          .controls
            div
              height: 30px
              margin: 0 8px 8px 8px
              input.button
                save_button()
              a.cancel
                background-image: url('images/cancel_icon.png')
                width: 30px
                height: 30px
                background-size: 20px 20px
                display: inline-block
                background-repeat: no-repeat
                background-position: 50% 50%

li.card.gu-mirror
  div.card_wrapper
    background: colors.list.card
    min-height: 20px
    border-radius: 3px
    margin-bottom: 6px
    border-bottom: 1px solid colors.list.card_border
    padding: 6px 6px 2px 8px
    span.card_name
