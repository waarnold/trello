  padding: 0 2px

.subscribed_badge
  span.badge_icon
    icon('subscribe_icon')
    height: 18px
    width: 18px
    background-size: 12px 12px
    background-position: 50% 50%

.description_badge
  span.badge_icon
    icon('description_icon')
